{
  "inputs": [
    {
      "id": "ado_org",
      "type": "promptString",
      "description": "Azure DevOps organization name (e.g. 'contoso')"
    },
    {
      "id": "ado_pat",
      "type": "promptString",
      "description": "Azure DevOps personal access token (PAT)"
    }
  ],
  "servers": {
    "ado": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@matthieupetite/azure-devops-mcp", "${input:ado_org}", "--authentication", "pat", "--pat", "${input:ado_pat}"],
      "env": {}
    }
  }
}
